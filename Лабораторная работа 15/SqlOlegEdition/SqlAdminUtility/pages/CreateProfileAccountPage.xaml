<Page x:Class="SqlAdminUtility.pages.CreateProfileAccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlAdminUtility.pages"
        mc:Ignorable="d"
        Title="CreateProfileAccount" Height="250" Width="400">
    <Grid>
        <ComboBox x:Name="AccountNames_CB" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="143,49,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ProfileName_TB" Text="Profile name"  HorizontalAlignment="Left" Height="23" Margin="143,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="143,175,0,0" VerticalAlignment="Top" Width="105" Height="30" Click="Button_Click"/>
        <Label Content="Mali Account: " HorizontalAlignment="Left" Margin="18,49,0,0" VerticalAlignment="Top"/>
        <Label Content="Mali profile name: " HorizontalAlignment="Left" Margin="18,102,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
